%h2.top-bar ログイン
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .form-area-signup
    .field
      = f.label :email
      = f.email_field :email, autofocus: true, class: "textarea"
    .field
      = f.label :password
      = f.password_field :password, autocomplete: "off", class: "textarea"
    - if devise_mapping.rememberable?
      .field
        = f.check_box :remember_me
        = f.label :remember_me
    .actions
      = f.submit "ログインする", class: "red-button large-button login";
= render "devise/shared/links"