%h2.top-bar 新規登録(無料)
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .form-area-signup
    .field
      = f.label :名前
      = f.text_field :name, autofocus: true, placeholder: "山田　太郎", class: "textarea"
    .field
      = f.label :メールアドレス
      = f.email_field :email, autofocus: true, placeholder: "example@gmail.com", class: "textarea"
    .field
      = f.label :性別
      <br>
      = f.radio_button :gender,1
      / = label_tag(:man, "男")
      = f.label :gender, "男"
      &nbsp;
      = f.radio_button :gender,2
      = f.label :gender, "女"
    .field
      = f.label :ご職業
      <br>
      = f.radio_button :job,1
      = f.label :job, "大学生"
      &nbsp;
      = f.radio_button :job,2
      = f.label :job, "社会人"
    .field
      = f.label :所属
      = f.text_field :job_detail, autofocus: true, placeholder: "慶応義塾大学法学部１年", class: "textarea"
    .field
      = f.label :パスワード
      - if @minimum_password_length
        %span.pw-rule
          (8文字以上の英数字)
      = f.password_field :password, autocomplete: "off", class: "textarea"
    .field
      = f.label :パスワード確認
      = f.password_field :password_confirmation, autocomplete: "off", class: "textarea"
    .actions
      = f.submit "登録する", class: "red-button large-button signup";
= render "devise/shared/links"